<div class="row flat-row">

  <%= render 'shared/sidebar' %>

  <div class="col-lg-9 col-md-12 col-sm-12 flat-content-container">
    <div class="row d-flex justify-content-between">
      <div class="col-lg-12 col-md-12 col-sm-12">

        <h2>Hello</h2>

        <p>your rental id is #<%= @rental.id %> and you pay <%= @rental.price %></p>
        <p><%= link_to("Download your contract", flat_rental_path(@rental.flat, @rental, format: :pdf), method: 'get', target: '_blank') %></p>

        <div class="flat-show-box">
          <h2>Payment history</h2>
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Payment date</th>
                <th scope="col">Period</th>
                <th scope="col">Status</th>
                <th scope="col">Due</th>
                <th scope="col">Paid</th>
                <th scope="col">Balance</th>
              </tr>
            </thead>

            <tbody>


            <% current_user.orders.each do |order| %>
              <tr scope="row">
              <td><%= order.created_at.strftime('%A %D') %></td>
              <td><%= order.created_at.strftime('%B %Y') %></td>
              <td><%= order.state %></td>
              <td><%= - @rental.price %></td>
              <td><%= order.amount %></td>
              <td><%= @rental.price - order.amount %></td>
              </tr>
            <% end %>

            </tbody>
          </table>

          <%= @counter %>


          <%= form_tag orders_path do %>
            <%= hidden_field_tag 'rental_id', @rental.id %>
            <%= submit_tag 'Pay rent now', class: 'btn btn-secondary' %>
          <% end %>
        </div>

    </div>
  </div>
</div>
