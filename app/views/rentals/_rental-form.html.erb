<%= simple_form_for [@flat, @rental] do |f| %>
  <%= f.input :tenant_email %>
  <%= f.input :price, label: "Monthly rent" %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :pending, collection: [true, false], include_blank: false %>
  <%= f.submit class: 'btn btn-primary mb-2' %>
<% end %>

<%= link_to("Go back", my_account_path) %>
