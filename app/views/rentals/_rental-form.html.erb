<%= simple_form_for [@flat, @rental] do |f| %>
  <%= f.input :price %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.association :user, :include_blank => false, :label_method => :full_name %>
  <%= f.submit class: 'btn btn-primary mb-2' %>
<% end %>

<%= link_to("Go back", my_account_path) %>
