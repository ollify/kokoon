<div class="row flat-row">

  <%= render 'shared/sidebar' %>

  <div class="col-lg-9 col-md-12 col-sm-12 flat-content-container">
    <div class="row d-flex justify-content-between">
      <div class="col-lg-9 col-md-12 col-sm-12">

        <h1>Checkout summary</h1>
        <p>Purchase of your rental with the id #<strong><%= @order.rental.id %></strong> for <strong><%= humanized_money_with_symbol @order.amount %></strong> for <%= Time.now.strftime('%B %Y') %></p>
        <button id="pay" class="btn btn-secondary">Pay</button>
        <script src="https://js.stripe.com/v3/"></script>
        <script>
          const paymentButton = document.getElementById('pay');
          paymentButton.addEventListener('click', () => {
            const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
            stripe.redirectToCheckout({
              sessionId: '<%= @order.checkout_session_id %>'
            });
          });
        </script>
      </div>
    </div>
  </div>
</div>


