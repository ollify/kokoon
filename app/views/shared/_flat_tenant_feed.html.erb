<% @flat.accepted_rentals.each do |rental| %>
  <div class="tenant-card">

    <div class="col-lg-2 col-md-2 col-sm-2 tenant-avatar-card">
      <%= image_tag avatar(rental.tenant), class: "avatar-large" %>
    </div>

    <div class="col-lg-10 col-md-10 col-sm-10">
      <div class="tenant-details">
        <h4><%= rental.tenant.first_name %> <%= rental.tenant.last_name %></h4>
        <div class="attributes"><strong>Contact tenant:</strong> &nbsp; <a href="mailto:<%= rental.tenant.email %>"><%= rental.tenant.email %></a></div>
      </div>

      <% if is_landlord?(current_user) %>
        <div class="tenant-details">
          <div class="attributes"><strong>Rental period:</strong> &nbsp; from <%= rental.start_date %> to <%= rental.end_date %></div>
          <div class="attributes"><strong>Price:</strong> &nbsp; <%= rental.price %> per month</div>
        </div>

        <div class="tenant-details-action">
          <i class="fas fa-edit"> </i> <%= link_to(" Edit tenant", edit_flat_rental_path(@flat, rental)) %>
          <i class="fas fa-trash-alt"> </i> <%= link_to(" Delete tenant", flat_rental_path(@flat, rental), method: :delete, data: {confirm: "Are you sure?"}) %>
        </div>
      <% end %>

    </div>
  </div>
<% end %>
