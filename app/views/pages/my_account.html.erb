<div class="account-container">

  <div class="account-aside">

    <%= image_tag avatar(current_user) %>

    <h1> Welcome, <%= current_user.first_name %>!</h1>

    <p><strong>First name:</strong>  <i><%= current_user.first_name %></i><br>
      <strong>Last name:</strong> <i><%= current_user.last_name %></i><br>
      <strong>Phone number:</strong>  <i><%= current_user.phone_number %></i><br>
      <strong>Email:</strong>  <i><%= current_user.email %></i></p>
      <p><%= current_user.description %></p>
      <div class="button-box">
        <%= button_to("Edit profile info", edit_user_registration_path, method: :get, class: "btn-secondary") %>
      </div>


  </div>

  <div class="account-main">



    <% unless current_user.is_tenant? || current_user.is_landlord? || !@pending_invites.empty? %>
      <div>
      <p>HERE COME SOME FANCY BOXXXXXXEZZZZ</p>
      <p>Welcome to Kokoon. Get started and add a flat. </p>
      <%= link_to 'Add flat', new_flat_path %>
      <p>You're a tenant? Do not hesitate to ask your tenant for an invitation link to join your flat.</p>

      </div>
    <% end %>

    <% if current_user.is_landlord? %>
      <%= render 'pages/landlord_properties' %>
    <% end %>

    <%#= csrf_meta_tags %>
    <% @pending_invites.each do |invite| %>
      <p>
        <%= invite.flat.user.first_name %> <%= invite.flat.user.first_name %>
        sent you one invitation for a flat located at <%= invite.flat.address %>
        from <%= invite.start_date %>.
      </p>
      <%= button_to("Join flat", flat_accept_rental_path(invite.flat.id, invite.id), class: "btn-secondary") %>
    <% end %>

    <% if current_user.is_tenant?  %>
      <%= render 'pages/tenant_flats' %>
    <% end %>

    <% if current_user.is_tenant? || current_user.is_landlord? %>
      <%= render 'pages/tickets' %>
    <% end %>

    </div>

  </div>

  </div>
