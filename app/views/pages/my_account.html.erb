<div class="account-container">

  <div class="account-aside">

    <%= image_tag avatar(current_user) %>

    <h1> Welcome, <%= current_user.first_name %>!</h1>

    <p><strong>First name:</strong>  <i><%= current_user.first_name %></i><br>
      <strong>Last name:</strong> <i><%= current_user.last_name %></i><br>
      <strong>Phone number:</strong>  <i><%= current_user.phone_number %></i><br>
      <strong>Email:</strong>  <i><%= current_user.email %></i></p>
      <p><%= current_user.description %></p>
      <div class="button-box">
        <%= button_to("Edit profile info", edit_user_registration_path, method: :get, class: "btn-secondary") %>
      </div>


  </div>

    <div class="account-main">
      <h1>My properties</h1>
      <div class="row justify-content-between">
        <% @flats.each do |flat| %>
        <div class="col-lg-6 col-md-12 col-sm-12">
          <div class="card-user">
            <%= image_tag img(flat) %>
            <div class="card-user-text">
              <h2>üìç <%= flat.address %></h2>
              <%= link_to("Edit", edit_flat_path(flat), class: "btn btn-outline-info") %>
              <%= link_to("View flat", flat_path(flat), class: "btn btn-outline-info") %>
            </div>
              <%= link_to("Add tenant", new_flat_rental_path(flat), class: "btn btn-outline-info") %>
          </div>
        </div>

        <% end %>
        <p> <%= link_to("Add a new flat", new_flat_path) %> </p>

      </div>


      <h1>My tickets</h1>
      <div class="row">
        <% 10.times do %>
        <div class="col-lg-12 col-md-12 col-sm-12">
          <div class="card-user ticket">
            <img src=<%= asset_path("rand-bg.jpg")%>>
            <div class="ticket-info">
              <h1><strong>Toilet is not swallowing water</strong></h1>
              <h3>Priority: High üî¥</h3>
            </div>
              <img class="ticket-icon" src=<%= asset_path("toilet.svg")%>>
              <img class="ticket-icon" src=<%= asset_path("toilet.svg")%>>
              <img class="ticket-icon" src=<%= asset_path("toilet.svg")%>>
             <div class="ticket-date">
              <h4><strong>Yesterday, at 17:30 h</strong></h4>
              <h5>Delete</h5>
            </div>

          </div>
        </div>
        <% end %>

      </div>

    </div>

  </div>
