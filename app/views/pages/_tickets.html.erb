<div class="tickets" id="unread_tickets">
  <h1>My unread tickets</h1>
  <div class="row">
    <% current_user.unread_tickets.each do |ticket| %>
    <div class="<%= ticket_classes(ticket) %>">
      <%= image_tag ticket_img(ticket) %>
      <div class="ticket-info">
        <h1><%= link_to(ticket.title, flat_rental_ticket_path(ticket.rental.flat, ticket.rental,ticket)) %></h1>
        <p>by <%= rental_user(ticket.rental).full_name %></p>
      </div>
      <div class="ticket-date">
        <h4>priority <strong><%= ticket.priority %> out of 10</strong></h4>
        <h4><strong><%= ticket.created_at.strftime("%d/%m/%Y") %></strong></h4>
        <h4><strong><%= link_to("Edit ticket", edit_flat_rental_ticket_path(ticket.rental.flat, ticket.rental, ticket)) %></strong></h4>
      </div>
    </div>
<% end %>
