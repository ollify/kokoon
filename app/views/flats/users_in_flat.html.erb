<div class="row flat-row">

  <%= render 'shared/sidebar' %>

  <div class="col-lg-9 col-md-12 col-sm-12 flat-content-container">

    <div class="col-lg-12 col-md-12 col-sm-12 flat-show-box">
      <h3>Landlord</h3>

      <div class="tenant-card">
        <div class="col-lg-2 col-md-2 col-sm-2 tenant-avatar-card">
          <%= image_tag avatar(@flat.user), class: "avatar-large" %>
        </div>

        <div class="col-lg-10 col-md-10 col-sm-10">
          <h4><%= @flat.user.full_name %></h4>
          <div class="tenant-details">
            <div class="attributes"><strong>Contact landlord:</strong> &nbsp; <a href="mailto:<%= @flat.user.email %>"><%= @flat.user.email %></a></div>
          </div>
        </div>
    </div>
    </div>


    <% unless @flat.accepted_rentals.empty? %>
      <div class="col-lg-12 col-md-12 col-sm-12 flat-show-box">
        <h3>People in this flat</h3>
        <%= render 'shared/flat_tenant_feed' %>
        <% if current_user.is_landlord? %>
          <div class="tenant-details-footer">
            <p> <%= button_to("ï¼‹ Add new tenant", new_flat_rental_path(@flat), method: 'get', class:'btn-secondary') %> </p>
          </div>
        <% end %>
      </div>
    <% end %>
</div>
