<div class="row flat-row">

  <%= render 'shared/sidebar' %>

  <div class="flat-content-box">

    <h2>About this kokoon</h2>

    <p class="description"> <%= @flat.description %></p>

  </div>
</div>

<% if is_landlord?(current_user) %>
  <%= render 'flats/landlord_show' %>
<% end %>

<% if is_tenant?(current_user) %>
  <%= render 'flats/tenant_show' %>
<% end %>

<% unless @flat.tickets.sum.empty? %>
  <% @flat.tickets.each do |ticket| %>
    <%= ticket.name %> with priority of <%= ticket.priority %>
  <% end %>
<% end %>

<p>
  <%= link_to("Add a ticket", new_flat_rental_ticket_path(@flat, @flat.rental(current_user))) %>
</p>
