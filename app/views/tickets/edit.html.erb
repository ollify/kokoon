<div class="forms">
  <div class="form-box">
    <h2 id="form-title">Edit ticket "<%= @ticket.title %>"</h2>
    <%= simple_form_for [@flat, @rental, @ticket] do |f| %>
      <%= f.input :title,
                  label: false,
                  placeholder: "Title" %>
      <%= f.input :category, collection: @ticket.available_categories %>
      <%= f.input :room,
                  label: false,
                  placeholder: "Room" %>
      <%= f.input :content,
                  label: false,
                  placeholder: "Content"  %>
      <%= f.input :priority, collection: (1..10), include_blank: false %>
      <%= f.input :photo %>
      <%= f.input :status, collection: @ticket.available_status, include_blank: false, selected: 'new'  %>
      <h5>Subscribers</h5>
        <% @ticket.subscriptions.each do |sub|  %>
          <%= image_tag avatar(sub.user), class: "avatar-large selected", 'data-user' => "#{sub.user.id}", 'data-subscription' => "#{sub.id}" %>
          <p>
            <%= sub.user.full_name %>
            <%#= s.collection_radio_buttons :user_id, [[@subscribers[@i-1].last, 'Yes'], ["", 'No']], :first, :last  %>
          </p>
        <% end %>
      <%= f.submit class: 'btn btn-primary mb-2' %>
    <% end %>
    <%= link_to("← Back", flat_path(@flat)) %>
  </div>
</div>

<%#= javascript_pack_tag 'subscriptions' %>
